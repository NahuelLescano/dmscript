#!/usr/bin/env bash

dmenu="dmenu -i -l 10 -g 3 -p"

pdf_viewer="zathura"

main() {
    files="$(find "$HOME" -maxdepth 5 -iname "*.pdf")"
    choice=$(printf '%s\n' "${files[@]}" | \
           ${dmenu} "File:" "$@") || exit 1

    notify-send $choice

    if [ "$choice" ]; then
        "${pdf_viewer}" "$choice"

    else
        echo "Program terminated." && exit 0
    fi
}

main
